@model DepartmentDetailsDTO

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">    
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general-tab" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="adminstration-tab">Adminstration</a>
    </Li>
</ul>

<div class="tab-content" id="myTabContent">
    <!--General Tab Coritent-->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Code"></Label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></Label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <Label class="col-form-label" asp-for="Description"></Label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <Label class="col-form-label" asp-for="CreationDate"></label>
                <input asp-for="CreationDate" class="form-control" readonly />
            </div>
        </div>
    </div>

    <!--Administration Tab Content-->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group col-12">
            <Label class="col-form-Label" asp-for="CreatedBy"></Label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-12">
            <label class="col-form-Label" asp-for="CreatedOn"></Label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group col-12">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-12">
            <label class="col-form-Label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
    </div>


    @if(ViewBag.Title == "Delete")
    {
        <form asp-action="Delete" asp-route-id="@ViewBag.Id" class="mt-4">
            <input type="submit" value="Delete" class="btn btn-danger"/>

            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </form>
    }
    else
    {
        <form asp-action="Edit" asp-route-id="@ViewBag.Id" class="mt-4">
        <input type="submit" value="Edit" class="btn btn-success"/>
        
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </form>
    }

</div>

