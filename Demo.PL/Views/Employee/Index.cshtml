@model IEnumerable<EmployeeDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<div class="m-2">
    <form class="row g-2 justify-content-center align-items-center" asp-action="Index" method="get">
    <div class="col-auto">
        <input class="form-control" type="text" name="SearchValue" placeholder="Search By Name"/>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-dark">Search</button>
    </div>
</form>
</div>

@if(Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody class="text-center">

            @foreach(var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@(employee.Image is not null ? employee.Image: "cat.jpg")" class="rounded" width="40" alt="Employee Image"/>
                    </td>
                    <td>@Html.DisplayFor(X => employee.Name)</td>
                    <td>@Html.DisplayFor(X => employee.EmployeeType)</td>
                    <td>@Html.DisplayFor(X => employee.Email)</td>
                    <td>@Html.DisplayFor(X => employee.Age)</td>
                    <td>@Html.DisplayFor(X => employee.Salary)</td>
                    <td>@Html.DisplayFor(X => employee.IsActive)</td>                  
                    <td>@Html.DisplayFor(X => employee.Gender)</td>


                    <partial name="_buttonPartial" model="@employee.Id" />
                </tr>

                <div class="modal" tabindex="-1" id="deleteModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title fs-5" id="exampleModalLabel">Delete Department</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are You Sure You Want To Delete This Department ?</p>
                            </div>
                            <div class="modal-footer">

                                <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There is No Employee</h4>
    </div>
}
