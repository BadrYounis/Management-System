@model CreatedEmployeeDTO

@inject IDepartmentService departmentService

@{
    ViewData["Title"] = "Create";

    var Departnments = new SelectList(await departmentService.GetAllDepartmentsAsync(), nameof(DepartmentDTO.Id) , nameof(DepartmentDTO.Name));
}

<div class="row justify-content-center align-items-center flex-column">
    <h1 class="col-6" my="4">Create New Employee</h1>
    <br />
    <br />

    <form asp-action="Create" class="col-6" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>

       @*  <div class="form-group col-6">
            <label class="col-form-label" asp-for="Name"></label>

            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div> *@

        <div class="form-group col-6 ">
            <label class="col-form-label" asp-for="Name"></label>

            <input asp-for="Name" class="form-control" style="width: 500px; height: 40px;" />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Email"></label>

            <input asp-for="Email" class="form-control" style="width: 500px; height: 40px; />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Address"></label>

            <input asp-for="Address" class="form-control" style="width: 500px; height: 40px;/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Age"></label>

            <input asp-for="Age" class="form-control" style="width: 500px; height: 40px;/>
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Salary"></label>

            <input asp-for="Salary" class="form-control" style="width: 500px; height: 40px;/>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="PhoneNumber"></label>

            <input asp-for="PhoneNumber" class="form-control" style="width: 500px; height: 40px;/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label asp-for="DepartmentId" class="control-label" style="margin-bottom: 8px; display: block;"></label>
            <select asp-for="DepartmentId" asp-items="@Departnments" class="form-control" style="width: 500px; height: 40px;">
                <option value="">
                    Select Department
                </option>
            </select>
        </div>

        <div class="form-group col-6">
            <label asp-for="EmployeeType" class="control-label" style="margin-bottom: 8px; display: block;"></label>
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control" style="width: 500px; height: 40px;">
                <option value="">
                    Select Employee Type
                </option>
            </select>
        </div>

        <div class="form-group col-6">
            <label asp-for="Gender" class="control-label"></label>
            <br />
            @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
                <div class="form-check">
                    <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption"/>
                    <label class="form-check-label" asp-for="Gender">
                        @genderOption
                    </label>
                </div>
            }
        </div>

        <div class="form-group col-12">
            <label class="col-form-label" asp-for="HiringDate"></label>
            <input type="date" asp-for="HiringDate" class="form-control" style="width: 500px; height: 40px;"/>
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Image"></label>
            <input asp-for="Image" type="file" class="form-control" style="width: 500px; height: 40px; />
        </div>

        <div class="form-group col-12 my-3">
            <div class="form-check">
                <input type="checkbox" asp-for="IsActive" class="form-check-input"/>
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>
        </div>

        <div class="mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </div>
        

    </form>
</div>

@section ValidationScripts {
    <partial name="_ValidationScriptsPartial" />
}