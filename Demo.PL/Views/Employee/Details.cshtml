@model EmployeeDetailsDTO
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>
<br />
<br />

<div class="row justify-content-center align-items-center mb-4">
    <div class="col-4">
        <img src="~/files/images/@(Model.Image is not null ? Model.Image: "cat.jpg")" class="img-fluid rounded-2 w-50" alt="Employee Image"/>
    </div>

</div>

<!--Bootstrap Tabs-->

<ul class="nav nav-tabs" id="EmployeeTabs" role="tablist">    
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general-tab" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-selected="false">Adminstration</a>
    </Li>
</ul>

<div class="tab-content" id="myTabContent">
    <!--General Tab Coritent-->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">

        <div class="row">
            <div class="form-group col-6 mb-3">
                <label class="form-label" asp-for="Name"></Label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Email"></Label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="Address"></Label>
                <input asp-for="Address" class="form-control" readonly />
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>
            <div class="form-group col-6 ">
                <Label class="control-label" asp-for="EmployeeType"></label>
                <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                    <option value="">
                        Selected Employee Type
                    </option>
                </select>
            </div>

            <div class="form-group col-6">
                <label class="control-label" asp-for="Gender"></label> <br />
                @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption" disabled/>
                        <label class="form-check-label" asp-for="Gender">
                            @genderOption
                        </label>
                    </div>
                }
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly />
            </div>

            <div class="form-group col-6 mb-3">
                <Label class="col-form-label" asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control" readonly />
            </div>

        </div>
    </div>

